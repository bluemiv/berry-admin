{
  "name": "berry-admin",
  "packageManager": "yarn@4.3.1",
  "repository": "https://github.com/bluemiv/berry-admin.git",
  "author": "taehongkim <public.bluemiv@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/**/*",
    "packages/**/*"
  ],
  "scripts": {
    "start": "yarn concurrently \"yarn start:db\" \"yarn web start\" \"yarn server start:dev\"",
    "web": "yarn workspace @berry-admin/web",
    "server": "yarn workspace @berry-admin/server",
    "start:db": "yarn stop:db && docker-compose up -d",
    "stop:db": "docker-compose down"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "dayjs": "^1.11.11"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.3.2"
  }
}
